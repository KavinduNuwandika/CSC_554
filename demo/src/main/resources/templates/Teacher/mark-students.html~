<!DOCTYPE html>
<html lang="en" xmlns:th="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="UTF-8">
    <title>Mark Students</title>
</head>
<body>

<h2>Mark Students for Course: <span th:text="${course.courseName}"></span></h2>

<form action="/teacher/mark-students" method="post">
    <!-- Hidden field for courseId -->
    <input type="hidden" name="courseId" th:value="${courseId}" />

    <table border="1">
        <thead>
        <tr>
            <th>Student Name</th>
            <th>Marks</th>
        </tr>
        </thead>
        <tbody>
        <th:block th:each="enrollment : ${enrollments}">
            <tr>
                <td th:text="${enrollment.student.firstName + ' ' + enrollment.student.lastName}"></td>
                <td>
                    <!-- Marks input field, pre-populate if marks already exist -->
                    <input type="number" name="marks" value="${enrollment.marks}" min="0" max="100" required />
                    <input type="hidden" name="enrollmentId" th:value="${enrollment.id}" />
                </td>
            </tr>
        </th:block>
        </tbody>
    </table>

    <br>
    <button type="submit">Save Marks</button>
</form>

<br>
<div class="button-container">
    <form action="/teacher/class-students" method="get">
        <!-- Pass courseId back to class-students page -->
        <button type="submit" th:attr="data-courseId=${courseId}">Back to Class Students</button>
    </form>
</div>

</body>
</html>
